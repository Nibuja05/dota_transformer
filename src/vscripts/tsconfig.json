{
	"compilerOptions": {
		"rootDir": ".",
		"outDir": "../../game/scripts/vscripts",
		"target": "esnext",
		"lib": ["esnext"],
		"types": ["@moddota/dota-lua-types/normalized", "dota_transformer"],
		"plugins": [
			{ "name": "dota_transformer/test_plugin" },
			{ "transform": "@moddota/dota-lua-types/transformer" },
			{ "transform": "dota_transformer/vscript_transform" }
		],
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"strict": true
	},
	"tstl": {
		"luaTarget": "JIT",
		"sourceMapTraceback": true
	},
	"include": ["**/*.ts", "../common/**/*.ts"]
}
